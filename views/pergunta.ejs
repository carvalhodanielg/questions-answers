<%- include ('partials/header.ejs') %>

    <% let cont=0 %>
    <% let month=["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul", "Ago", "Set", "Out", "Nov", "Dez"] %>

<body>
    
<%- include ('partials/navbar.ejs')%>

        <div class="title-index">
            <h1>Answer the question:</h1>
        </div>

    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
                <h2 id="title-text"><%= pergunta.title %></h2>
            </div>

            <div class="card-body">
                <h5><%= pergunta.description %></h5>
            </div>

            <% resposta.forEach(resposta =>{ cont ++ }) %>
                <hr>
            <div class="total-answers">
                <p > Answers for this question: <%= cont %></p>
            </div>
                            
        </div> 
            <div class="card-body">
                
                <form action="/responder" method="post">
                
                <label for="answer-field">Your Answer:</label>
                <textarea class= "form-control"name="answer" id="answer-field" cols="30" rows="3"></textarea>
                <br>    
                <button type="submit" class="btn btn-success">Submit</button>
                <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            </form>
            </div>
           
                <h3 id="title-text" class="answer-title">Answers:</h3>
                <hr>

    <% resposta.forEach(resposta =>{ %>
            
            <div class="card">
                <div class="card-body">
                     <p><%=resposta.corpo %></p>
                </div>

                <div class="total-answers">
                    <p><%= `${(resposta.createdAt.getFullYear())} ${month[(resposta.createdAt.getMonth())]} ${(resposta.createdAt.getDate())} at ${(resposta.createdAt.getHours())}h:${(resposta.createdAt.getMinutes())}min` %></p>
                </div>

            </div>
            <br>

        <% }) %>
               
    </div>
</body>

<%- include ('partials/footer.ejs') %>



